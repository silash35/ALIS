generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Place {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userName String
  userMail String

  name        String
  description String
  address     String
  phone       String?
  email       String?
  imageURL    String?
  website     String?

  @@fulltext([name, address, description])
}
